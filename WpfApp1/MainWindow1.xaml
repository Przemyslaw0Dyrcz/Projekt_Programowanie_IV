<Window x:Class="WypożyczalniaFilmów.MainWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WypożyczalniaFilmów"
        mc:Ignorable="d"
        Title="Wypożyczalnia Filmów" Height="450" Width="800">
    <Grid>
        <Button Content="Wypożycz Film" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Width="120" Click="WypozyczFilm_Click"/>

        <ListBox x:Name="AvailableMoviesListBox" HorizontalAlignment="Left" Margin="10,40,0,10" Width="300"/>

        <TextBlock x:Name="MovieInfoTextBlock" HorizontalAlignment="Left" Margin="320,40,0,10" Width="450" TextWrapping="Wrap"/>

        <Button x:Name="WypozyczButton" Content="Wypożycz" HorizontalAlignment="Left" Margin="670,404,0,0" VerticalAlignment="Top" Width="120" IsEnabled="False" Click="WypozyczButton_Click"/>
    </Grid>
</Window>

